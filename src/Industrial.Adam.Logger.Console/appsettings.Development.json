{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Industrial.Adam.Logger.Core": "Debug"
    }
  },
  "AdamLogger": {
    "Devices": [
      {
        "DeviceId": "DEMO001",
        "Name": "Demo ADAM Device",
        "IpAddress": "127.0.0.1",
        "Port": 5502,
        "UnitId": 1,
        "Enabled": true,
        "PollIntervalMs": 2000,
        "TimeoutMs": 5000,
        "MaxRetries": 2,
        "KeepAlive": false,
        "Channels": [
          {
            "ChannelNumber": 0,
            "Name": "Test Counter",
            "StartRegister": 0,
            "RegisterCount": 2,
            "Enabled": true,
            "ScaleFactor": 1.0,
            "Unit": "counts",
            "MinValue": 0,
            "MaxValue": 1000000,
            "MaxChangeRate": 500
          }
        ]
      }
    ]
  },
  "InfluxDb": {
    "Url": "http://localhost:8086",
    "Token": "demo-token",
    "Organization": "demo",
    "Bucket": "adam_demo",
    "MeasurementName": "counter_demo",
    "BatchSize": 10,
    "BatchTimeoutMs": 2000,
    "FlushIntervalMs": 2000,
    "EnableGzip": false,
    "TimeoutSeconds": 10,
    "Tags": {
      "environment": "development"
    }
  }
}