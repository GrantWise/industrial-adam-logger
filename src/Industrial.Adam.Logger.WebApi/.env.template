# Industrial Adam Logger API - Environment Variables Template
# Copy the root .env.template to .env.local and configure these specific settings

# =============================================================================
# LOGGER API SPECIFIC SETTINGS
# =============================================================================
# API configuration
ASPNETCORE_URLS=http://+:5000
ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# TIMESCALE DATABASE CONNECTION
# =============================================================================
# These will override the root .env.local settings if needed
# TIMESCALE_HOST=localhost
# TIMESCALE_PORT=5433
# TIMESCALE_DATABASE=adam_counters
# TIMESCALE_USERNAME=adam_user
# TIMESCALE_PASSWORD=your_secure_password

# =============================================================================
# ADAM DEVICE CONFIGURATION
# =============================================================================
# Production mode settings
DEMO_MODE=false

# Device polling settings
DEFAULT_POLL_INTERVAL_MS=1000
DEFAULT_TIMEOUT_MS=3000
DEFAULT_MAX_RETRIES=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=Information
LOG_FILE_RETENTION_DAYS=30

# =============================================================================
# CORS SETTINGS (API SPECIFIC)
# =============================================================================
# These will override root CORS settings if needed
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001